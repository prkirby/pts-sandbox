{
  "include": ["src"],
  "compilerOptions": {
    "outDir": "./lib/esm",
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ES2020",
    "target": "ES6",
    "jsx": "react",
    "paths": {
      "tools": ["./src/tools/"],
      "sketches": ["./src/sketches/"],
      "types": ["./src/types/"]
    }
  }
}
