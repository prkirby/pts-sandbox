{
  "include": ["src"],
  "exclude": ["src/index.ts"],
  "compilerOptions": {
    "outDir": "lib",
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es5",
    "lib": ["ES2015", "DOM"],
    "jsx": "react",
    "allowJs": true,
    "paths": {
      "tools": ["./src/tools/"],
      "sketches": ["./src/sketches/"],
      "types": ["./src/types/"]
    }
  }
}
